{

  "tools": {
    "js": "tools/**/*.js",
    "test": "tools/**/*.unit.js"
  },

  "components": {
    "js": "components/**/*.js",
    "test": {
      "e2e": "components/**/*.e2e.js",
      "unit": "components/**/*.unit.js",
      "all": [
        "<%= files.components.test.e2e %>",
        "<%= files.components.test.unit %>"
      ]
    }
  },

  "admin": {
    "html": "apps/admin/index.html",
    "less": "apps/admin/styles.less",
    "test": [
      "<%= files.tools.test %>",
      "<%= files.components.test.all %>"
    ],
    "js": [
      "apps/admin/**/*.js",
      "<%= files.tools.js %>",
      "<%= files.components.js %>"
    ],
    "out": {
      "html": "dist/admin/index.html",
      "js": "dist/admin/build.js",
      "css": "dist/admin/build.css"
    }
  },

  "candidate": {
    "html": "apps/candidate/index.html",
    "less": "apps/candidate/styles.less",
    "test": [
      "<%= files.tools.test %>",
      "<%= files.components.test.all %>"
    ],
    "js": [
      "apps/candidate/**/*.js",
      "<%= files.tools.js %>",
      "<%= files.components.js %>"
    ],
    "out": {
      "html": "dist/candidate/index.html",
      "js": "dist/candidate/build.js",
      "css": "dist/candidate/build.css"
    }
  },

  "employer": {
    "html": "app/employer/index.html",
    "less": "apps/employer/styles.less",
    "test": [
      "<%= files.tools.test %>",
      "<%= files.components.test.all %>"
    ],
    "js": [
      "apps/employer/**/*.js",
      "<%= files.tools.js %>",
      "<%= files.components.js %>"
    ],
    "out": {
      "html": "dist/employer/index.html",
      "js": "dist/employer/build.js",
      "css": "dist/employer/build.css"
    }
  },

  "index": {
    "html": "apps/index.html",
    "less": "apps/index/styles.less",
    "test": [
      "<%= files.tools.test %>",
      "<%= files.components.test.all %>"
    ],
    "js": [
      "apps/index/**/*.js",
      "<%= files.tools.js %>",
      "<%= files.components.js %>"
    ],
    "out": {
      "html": "dist/index.html",
      "js": "dist/build.js",
      "css": "dist/build.css"
    }
  },

  "build": {
    "amd": "tmp/amd-build.js",
    "ngannotate": "tmp/ngannotate-build.js"
  },

  "apps": {
    "js": [
      "<%= files.admin.js %>",
      "<%= files.candidate.js %>",
      "<%= files.employer.js %>",
      "<%= files.index.js %>"
    ],
    "test": [
      "<%= files.admin.test %>",
      "<%= files.candidate.test %>",
      "<%= files.employer.test %>",
      "<%= files.index.test %>"
    ]
  },

  "config": [
    "config/**/*.json",
    "config/**/*.js",
    ".jshintrc",
    "bower.json",
    "gruntfile.js",
    "package.json"
  ]
}
