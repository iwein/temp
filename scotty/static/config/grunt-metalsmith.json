{
  "static-pages": {
    "options": {
      "metadata": {
        "api_url": "<%= env.api_url %>"
      },
      "plugins": {
        "metalsmith-sitemap": {
          "ignoreFiles": [],
          "urlProperty": "path",
          "output": "sitemap.xml",
          "hostname": "http://4scotty.com",
          "defaults": {
            "priority": 0.5,
            "changefreq": "daily"
          }
        },
        "metalsmith-templates": {
          "engine": "handlebars",
          "directory": "apps/index",
          "helpers": {},
          "partials": {
            "footer": "../common/footer"
          }
        }
      }
    },
    "src": "<%= files.index.pages %>",
    "dest": "<%= files.index.out.pages %>"
  }
}
