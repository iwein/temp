{
  "admin": {
    "src": "<%= files.admin.html %>",
    "dest": "<%= files.admin.out.html %>"
  },
  "admin-resources": {
    "cwd": "<%= files.apps.folder %>",
    "src": "<%= files.admin.resources %>",
    "dest": "<%= files.apps.out.folder %>",
    "expand": true
  },

  "candidate": {
    "src": "<%= files.candidate.html %>",
    "dest": "<%= files.candidate.out.html %>"
  },
  "candidate-resources": {
    "cwd": "<%= files.apps.folder %>",
    "src": "<%= files.candidate.resources %>",
    "dest": "<%= files.apps.out.folder %>",
    "expand": true
  },

  "employer": {
    "src": "<%= files.employer.html %>",
    "dest": "<%= files.employer.out.html %>"
  },
  "employer-resources": {
    "cwd": "<%= files.apps.folder %>",
    "src": "<%= files.employer.resources %>",
    "dest": "<%= files.apps.out.folder %>",
    "expand": true
  },

  "index": {
    "src": "<%= files.index.out.pages %>/*.html",
    "dest": "<%= files.apps.out.folder %>",
    "expand": true,
    "flatten": true
  },
  "index-resources": {
    "src": "<%= files.index.out.pages %>/de/*.html",
    "dest": "<%= files.apps.out.folder %>/de",
    "expand": true,
    "flatten": true
  },

  "static-pages-en": {
    "src": "<%= files.index.out.pages %>/*.html",
    "dest": "<%= files.apps.folder %>",
    "expand": true,
    "flatten": true
  },
  "static-pages-de": {
    "src": "<%= files.index.out.pages %>/de/*.html",
    "dest": "<%= files.apps.folder %>/de",
    "expand": true,
    "flatten": true
  }
}
