{
  "admin": {
    "src": "<%= files.admin.html %>",
    "dest": "<%= files.admin.out.html %>"
  },
  "admin-resources": {
    "cwd": "<%= files.apps.folder %>",
    "src": "<%= files.admin.resources %>",
    "dest": "<%= files.apps.out.folder %>",
    "expand": true
  },

  "candidate": {
    "src": "<%= files.candidate.html %>",
    "dest": "<%= files.candidate.out.html %>"
  },
  "candidate-resources": {
    "cwd": "<%= files.apps.folder %>",
    "src": "<%= files.candidate.resources %>",
    "dest": "<%= files.apps.out.folder %>",
    "expand": true
  },

  "employer": {
    "src": "<%= files.employer.html %>",
    "dest": "<%= files.employer.out.html %>"
  },
  "employer-resources": {
    "cwd": "<%= files.apps.folder %>",
    "src": "<%= files.employer.resources %>",
    "dest": "<%= files.apps.out.folder %>",
    "expand": true
  },

  "index": {
    "files": [{
      "src": "<%= files.index.out.pages %>/*.html",
      "dest": "<%= files.apps.out.folder %>",
      "expand": true,
      "flatten": true
    }, {
      "src": "<%= files.index.out.pages %>/en/*.html",
      "dest": "<%= files.apps.out.folder %>/en",
      "expand": true,
      "flatten": true
    }]
  },
  "index-resources": {
    "files": [{
      "cwd": "<%= files.apps.folder %>",
      "src": "<%= files.index.resources %>",
      "dest": "<%= files.apps.out.folder %>",
      "expand": true
    }, {
      "src": "<%= files.index.vendors %>",
      "dest": "<%= files.apps.out.folder %>",
      "expand": true,
      "flatten": true
    }]
  },
  "static-pages": {
    "files": [{
      "src": [
        "<%= files.index.sitemap %>",
        "<%= files.index.out.pages %>/*.html"
      ],
      "dest": "<%= files.apps.folder %>",
      "expand": true,
      "flatten": true
    }, {
      "src": [
        "<%= files.index.sitemap %>",
        "<%= files.index.out.pages %>/en/*.html"
      ],
      "dest": "<%= files.apps.folder %>/en",
      "expand": true,
      "flatten": true
    }]
  }
}
